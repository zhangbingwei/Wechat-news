<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_myphoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:onClick=""
            android:src="@drawable/me" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_myphoto"
            android:text="墨田"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_desp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_myphoto"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_myphoto"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="墨田，我的家乡，那里有我的根"
            android:textColor="#a000"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_left_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/left" >
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/left"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="星期"
            android:textColor="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_day_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:text="夜间"
            android:textColor="@drawable/text_selector"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="上海:33C"
            android:textColor="@drawable/text_selector"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>